


class Game

  class Room
    attr_accessor(:name, :description, :room_id, :isLocked)

    def initialize(name, description, room_id)
      @name = name
      @description = description
      @room_id = room_id
      @isLocked = false
    end

    def describe
      puts @description
    end

    def move
      puts "you can move to; "
    end
  end

  @cell1 = Room.new("Your cell", "Your prison cell", 1)
  @cell2 = Room.new("Cell 2", "Prison cell next to yours", 2)
  @cell3 = Room.new("Cell 3", "Prison cell opposite yours", 3)
  @prison_hallway = Room.new("Prison Hallway", "You are in the prison hallway", 4)

  @game_complete = false
  @room = @cell1
  @@description = $description

  while @game_complete == false
    puts "where would you like to move to?"
    input = gets.chomp
    if input == "x"
      puts @room.describe
    else input = "end"
      @game_complete = true
    end


  end



end


play = Game.new
play